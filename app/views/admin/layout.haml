!!! Strict
%html{ html_attrs("en_us")}
  %head
    %title 
      My Scrum Admin
      = if_not_blank(@title, " | ")

    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/

    - %w(jquery-1.7.2.min.js jquery-ui-1.8.21.custom.min.js jquery.dataTables.min.js jquery.contextMenu.js d3.v3.min.js application.js).each do |j|
      %script{:type => 'text/javascript', :language => 'javascript', :src => "/js/#{j}"}

    %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/site.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/admin.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/jquery.contextMenu.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/jqui-vetsk-admin/vetsk-admin.css"}
    %link{:rel => "stylesheet", :href => '/css/admin768.css', :media => "only screen and (min-width: 768px)"}
       
    
  %body{:class => @bclass, :id => @bid}
    
    -# show flash message if any (from sinatra-flash)
    =styled_flash
    
    #header
      - if @current_admin
        #loggedinas
          %strong #{@current_admin.name}
          %a{:href => '/admin/logout'} logout
        .clear
        %a.badge{:href => '/admin/profiles'} Admins
        %a.badge{:href => '/admin/owners'} Owners
        %a.badge{:href => '/admin/projects'} Projects
        %a.badge{:href => '/admin/sprints'} Sprints
        %a.badge{:href => '/admin/user_stories'} User Stories
        %a.badge{:href => '/admin/tests'} Tests
        %a.badge{:href => '/admin/jobs'} Jobs
      .clear
                


    /content from views spits out here
    #content{:"data-role" => 'content', :class => @cclass}
      = show_breadcrumbs
      = yield
      

    #footer
      %span.floatleft Â©#{Date.today.year} My Scrum