!!! Strict
%html{ html_attrs("en_us") }
  %head
    %title 
      MyScrum Owner Area
      = if_not_blank(@title, " | ")

    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/

    - %w(jquery-1.7.2.min.js jquery.dataTables.min.js datatables-uk.js application.js bootstrap-dropdown.js jquery-ui-1.8.21.custom.min.js jquery.form.js jquery.cookie.js slimbox2.js video.min.js).each do |j|
      %script{:type => 'text/javascript', :language => 'javascript', :src => "/js/#{j}"}

    :javascript
      _V_.options.flash.swf = "/video-js.swf";

    %link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/video-js/video-js.min.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/cupertino/jquery-ui-1.8.21.custom.css"} 
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/jqui-vetsk-public/vetsk-public.css"} 
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/site.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/owner.css"}
    %link{:rel => "stylesheet", :href => '/css/owner768.css', :media => "only screen and (min-width: 768px) and (max-width: 1049px)"}
    %link{:rel => "stylesheet", :href => '/css/owner1050.css', :media => "only screen and (min-width: 1050px)"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/bootstrap-dropdown.css"}
    %link{:rel => "stylesheet", :type => "text/css",  :href => "/stylesheets/slimbox/slimbox2.css", :media => "screen"}

    // Google Fonts
    %link{:href => 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,700|Waiting+for+the+Sunrise', :rel => 'stylesheet', :type => 'text/css'}
    
    /[if lte IE 9] 
      %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/site768.css"} 
      %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/site-ie.css"} 

    /[if IE 7 ] 
      %link{:rel => "stylesheet", :type => "text/css",  :href => "/css/site-ie7.css"}
    
  %body{:class => @bclass, :id => @bid}
    
    -# show flash message if any (from sinatra-flash)
    =styled_flash
    
    #header
      #userlogin.floatright
        %a.badge{:href => '/'} Home
        - if @current_user
          %a.badge{:href => '/admin/return'} Back to Admin »
        %a.badge{:href => '/owner/projects'} Projects
        %a.badge{:href => '/owner'} Account Settings
        %a.badge{:href => '/owner/logout'} #{current_owner.username} - Log Out

        
      #logo
        %a{:href => '/owner'} Account Settings

          
    
    /content from views spits out here
    #content{:class => @cclass}
      = yield

    #footer
      %span.floatleft ©#{Date.today.year} My Scrum
