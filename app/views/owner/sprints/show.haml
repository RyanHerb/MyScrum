!!!
%h1= "Sprint #{@sprint.id}"
%p= "Start Date: #{@sprint.start_date}"
%p= "Duration: #{@sprint.duration}"
%p= "Sprint Difficulty: "
%fieldset
  %legend Sprint details
  .tabs
    %ul
      %li.tab
        %a.nolink{:href => '#tab1'} Wall
      %li.tab
        %a{:href => '#tab2'} User Stories
    .clear

    #tab1 
      %a.badge{:href  => "/owner/projects/#{@project.pk}/jobs/create"} Create Job
      %table.postItWall
        %thead
          %tr
            %td User Stories
            %td To Do
            %td In Progress
            %td Done
        %tbody
          - @user_stories.each do |us|
            %tr{:class => "container_id_#{us.pk}"}
              %td
                %a{:href => "/owner/projects/"}= us.title
              %td.todo.container_droppable{:"data-state" => "todo"}
                - us.jobs_dataset.todo.each do |job|
                  = global_partial :post_it, :locals => {:job => job}
              %td.inprogress.container_droppable{:"data-state" => "inprogress"}
                - us.jobs_dataset.in_progress.each do |job|
                  = global_partial :post_it, :locals => {:job => job}
              %td.done.container_droppable{:"data-state" => "done"}
                - us.jobs_dataset.done.each do |job|
                  = global_partial :post_it, :locals => {:job => job}
    #tab2.pane
      %table.datatable
        %thead
          %tr
            %th Id
            %th Title
            %th Description
            %th Priority
            %th Diffilculty
            %th Finished
            %th Validated
            %th.right.nosort Actions
        %tbody
          - @user_stories.each do |u|
            %tr.selectable
              %td= u.id
              %td= u.title
              %td= u.description
              %td= u.priority
              %td= u.diffilculty
              %td= u.finished ? "Yes" : "No"
              %td= u.valid ? "Yes" : "No"
              %td.right.actions
                %a{:href => "/owner/user_stories/#{u.pk}/show"}
                  %img{:src => '/img/icons/view.png', :title => "view #{u.title}"}
                %a{:href => "/owner/user_stories/#{u.pk}/edit"}
                  %img{:src => '/img/icons/edit.png', :title => "edit #{u.title}"}
      