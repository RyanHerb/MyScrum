%a.addmore{:href => "/admin/owners/new"} new Owner
%h1 Owners
%table.datatable{:style => "width: 100%"}
  %thead
    %tr
      %th Name
      %th Username
      %th Email
      %th.right.nosort
  %tbody    
    - @owners.each do |o|
      %tr.selectable{:rel => "/admin/owners/#{o.pk}/show"}
        %td= o.name
        %td= o.username
        %td
          %a{:href => "mailto:#{o.email}"}= o.email
        %td.right.nosort
          %a{:href => "/admin/owners/#{o.id}/edit"}
            %img{:src => '/img/icons/edit.png', :title => "edit #{o.name}"}
          %a.delete_link{:href => "/admin/owners/#{o.id}", :rel => "Are you sure you want to delete this user?", :rev => "/admin/owners"}
            %img{:src => '/img/icons/cross.png', :title => "delete #{o.name}"}
