- @title = "User Stories"

= form_for @user_story do |f|
  %fieldset
    %legend Create New User Story
    = f.input :title, :label => 'Title'
    = f.textarea :description, :input_options => {:rows => 6}, :label => 'Description'
    = f.input :priority, :label => 'Priority', :type => "number", :min => "1"
    = f.input :diffilculty, :label => 'Diffilculty', :type => "number", :min => "1"
    = f.submit "Submit"